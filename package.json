{
  "name": "@pinia-plugin-persistedstate/monorepo",
  "version": "3.0.2",
  "private": true,
  "packageManager": "pnpm@7.27.1",
  "description": "Monorepo for pinia-plugin-persistedstate",
  "author": "prazdevs",
  "license": "MIT",
  "homepage": "https://prazdevs.github.io/pinia-plugin-persistedstate/",
  "scripts": {
    "alex": "alex docs",
    "build": "stale-dep && pnpm -r run build",
    "test": "stale-dep && pnpm -r run test:run",
    "test:coverage": "stale-dep && pnpm -r run test:coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "postinstall": "stale-dep -u",
    "release:plugin": "pnpm -F pinia-plugin-persistedstate run release",
    "release:nuxt": "pnpm -F @pinia-plugin-persistedstate/nuxt run release"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.35.2",
    "@types/node": "^18.14.0",
    "@vitest/coverage-c8": "^0.28.5",
    "@vitest/ui": "^0.28.5",
    "alex": "^11.0.0",
    "bumpp": "^8.2.1",
    "eslint": "^8.34.0",
    "happy-dom": "^8.5.0",
    "lint-staged": "^13.1.2",
    "simple-git-hooks": "^2.8.1",
    "stale-dep": "^0.6.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vite": "^4.1.2",
    "vitepress": "1.0.0-alpha.46",
    "vitest": "^0.28.5",
    "vue": "^3.2.47"
  },
  "volta": {
    "node": "18.12.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "typescript",
        "vue"
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix",
    "docs/**/*.md": "alex"
  }
}
